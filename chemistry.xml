<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:background="#FFB300"
                android:orientation="horizontal">

                <TextView

                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="cursive"
                    android:gravity="center_vertical"
                    android:text="Chemistry"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textColor="#FFFFFF"
                    android:textSize="32sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/chemistry" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFB300"
                    android:text="Question 1"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="What is structure of Ethane? (Choose the right answer(s))"
                    android:textColor="#000000"
                    android:textSize="20sp" />


                <CheckBox
                    android:id="@+id/ch4_check_box"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CH4"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textSize="16sp" />

                <CheckBox
                    android:id="@+id/c2h6_check_box"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="C2H6"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textSize="16sp" />

                <CheckBox
                    android:id="@+id/c6h6o6_check_box"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="C6H6O6"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textSize="16sp" />

                <CheckBox
                    android:id="@+id/ch3ch3_check_box"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="H3C-CH3"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textSize="16sp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:onClick="showChemistryOne"
                    android:text="Show answer" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFB300"
                    android:text="Question 2"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="What is the pH of an acidic solution at 25 degree celisius?"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/less_radio_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="secondQuestionChemistry"
                        android:text="0 &lt; pH &lt; 7"
                        android:textAppearance="?android:textAppearanceMedium"
                        android:textSize="16sp" />

                    <RadioButton
                        android:id="@+id/equal_radio_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="secondQuestionChemistry"
                        android:text="pH = 7"
                        android:textAppearance="?android:textAppearanceMedium"
                        android:textSize="16sp" />

                    <RadioButton
                        android:id="@+id/more_radio_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="secondQuestionChemistry"
                        android:text="7 &lt; pH &lt; 14"
                        android:textAppearance="?android:textAppearanceMedium"
                        android:textSize="16sp" />


                </RadioGroup>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:onClick="showChemistryTwo"
                    android:text="Show answer" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFB300"
                    android:text="Question 3"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="The high boiling point of water is due to..?"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/hydogen_radio_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="thirdQuestionChemistry"
                        android:text="Hydrogen Bond Between Water Molecules"
                        android:textAppearance="?android:textAppearanceMedium"
                        android:textSize="16sp" />

                    <RadioButton
                        android:id="@+id/impurities_radio_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="thirdQuestionChemistry"
                        android:text="Existance of impurities"
                        android:textAppearance="?android:textAppearanceMedium"
                        android:textSize="16sp" />

                    <RadioButton
                        android:id="@+id/lowph_radio_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="thirdQuestionChemistry"
                        android:text="Low pH of water"
                        android:textAppearance="?android:textAppearanceMedium"
                        android:textSize="16sp" />

                    <RadioButton
                        android:id="@+id/weight_radio_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="thirdQuestionChemistry"
                        android:text="High molecular weigh of water"
                        android:textAppearance="?android:textAppearanceMedium"
                        android:textSize="16sp" />
                </RadioGroup>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:onClick="showChemistryThree"
                    android:text="Show answer" />

            </LinearLayout>


            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="#DD2C00"
                android:onClick="showChemistryResults"
                android:text="Calculate Results"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/chemistry_result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="0/3"
                android:textSize="72sp" />

        </LinearLayout>


    </ScrollView>

</LinearLayout>
